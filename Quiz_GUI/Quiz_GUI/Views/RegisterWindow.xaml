<Window x:Class="Quiz_GUI.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:Quiz_GUI.Helpers"
        Title="Login"
        Height="600"
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Style for Button with rounded corners -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center" 
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Background Image -->
        <Grid.Background>
            <ImageBrush ImageSource="back1.jpg" Stretch="UniformToFill" />
        </Grid.Background>

        <!-- Login Form -->
        <Border Background="#AAFFFFFF" CornerRadius="10" Padding="20" Width="300" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel>
                <!-- Title -->
                <TextBlock Text="Login" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#333333"
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,20"/>

                <!-- Username Field -->
                <TextBox Name="UsernameTextBox" 
                         helpers:TextBoxHelper.Placeholder="Username"
                         Margin="0,10" 
                         FontSize="14" 
                         Padding="8" />
                <!-- Password Field -->
                <PasswordBox Name="PasswordBox" 
                             helpers:TextBoxHelper.Placeholder="Password"
                             Margin="0,10" 
                             FontSize="14" 
                             Padding="8" />

                <PasswordBox Name="ConfirmPasswordBox" 
                            helpers:TextBoxHelper.Placeholder="Password"
                            Margin="0,10" 
                            FontSize="14" 
                            Padding="8" />

                <!-- Login Button -->
                <Button Name="Register" 
                        Content="Register" 
                        Click="RegisterButton_Click"
                        Background="#4CAF50" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        Margin="0,20,0,0" 
                        Padding="10" 
                        Style="{StaticResource RoundedButtonStyle}" />
                
                <Button Name="Login" 
                        Content="Login" 
                        Click="LoginButton_Click"
                        Background="#2196F3" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        Margin="0,10,0,0" 
                        Padding="10" 
                        Style="{StaticResource RoundedButtonStyle}" />

            </StackPanel>
        </Border>
    </Grid>
</Window>
