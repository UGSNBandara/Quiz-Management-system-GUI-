<Window x:Class="Quiz_GUI.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Error" Height="150" Width="350"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        ResizeMode="NoResize" WindowStyle="None"
        >
    <Border BorderBrush="DarkRed" BorderThickness="2" Background="LightYellow">
        <Grid>
            <TextBlock Name="ErrorMessageTextBlock"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Foreground="Red" 
                       FontSize="14"/>
            <Button Content="OK" Width="100" Height="50" 
                    HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                    Margin="0,0,0,10" 
                    Background="Red" Foreground="White" BorderBrush="DarkRed" BorderThickness="1"
                    Click="OnOkButtonClick"/>
        </Grid>
    </Border>
</Window>
